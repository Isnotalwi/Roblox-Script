local PromptGui = {}

function PromptGui:Create(config)
    -- Create the GUI components
    local ScreenGui = Instance.new("ScreenGui")
    local Frame = Instance.new("Frame")
    local Title = Instance.new("TextLabel")
    local Text = Instance.new("TextLabel")
    local IconImage = Instance.new("ImageLabel")
    local YesButton = Instance.new("TextButton")
    local CancelButton = Instance.new("TextButton")

    -- Set the GUI parent to the Player's GUI
    ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

    -- Frame setup
    Frame.Size = UDim2.new(0, 300, 0, 200)
    Frame.Position = UDim2.new(0.5, -150, 0.5, -100)
    Frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    Frame.Parent = ScreenGui

    -- Title setup
    Title.Text = config.Title or "Prompt Title"
    Title.Font = Enum.Font.SourceSans
    Title.TextSize = 18
    Title.TextColor3 = Color3.new(1, 1, 1)
    Title.Size = UDim2.new(1, 0, 0.2, 0)
    Title.Parent = Frame

    -- Text setup
    Text.Text = config.Text or "Prompt Text"
    Text.Font = Enum.Font.SourceSans
    Text.TextSize = 16
    Text.TextColor3 = Color3.new(1, 1, 1)
    Text.Size = UDim2.new(1, 0, 0.4, 0)
    Text.Position = UDim2.new(0, 0, 0.2, 0)
    Text.Parent = Frame

    -- Icon setup (if provided)
    if config.Icon then
        IconImage.Image = config.Icon
        IconImage.Size = UDim2.new(0, 50, 0, 50)
        IconImage.Position = UDim2.new(0.05, 0, 0.05, 0)
        IconImage.BackgroundTransparency = 1
        IconImage.Parent = Frame
    end

    -- Yes button setup
    YesButton.Text = "Yes"
    YesButton.Font = Enum.Font.SourceSans
    YesButton.TextSize = 14
    YesButton.BackgroundColor3 = Color3.new(0, 1, 0)
    YesButton.Size = UDim2.new(0.4, 0, 0.2, 0)
    YesButton.Position = UDim2.new(0.05, 0, 0.7, 0)
    YesButton.Parent = Frame

    -- Cancel button setup
    CancelButton.Text = "Cancel"
    CancelButton.Font = Enum.Font.SourceSans
    CancelButton.TextSize = 14
    CancelButton.BackgroundColor3 = Color3.new(1, 0, 0)
    CancelButton.Size = UDim2.new(0.4, 0, 0.2, 0)
    CancelButton.Position = UDim2.new(0.55, 0, 0.7, 0)
    CancelButton.Parent = Frame

    -- Button functionalities
    YesButton.MouseButton1Click:Connect(function()
        if config.Yes then
            config.Yes()
        end
        ScreenGui:Destroy()
    end)

    CancelButton.MouseButton1Click:Connect(function()
        if config.Cancel then
            config.Cancel()
        end
        ScreenGui:Destroy()
    end)
end

return PromptGui
